<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/widget_margin"
    android:orientation="vertical"
    android:background="@drawable/round"
    >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            style="@style/title"
            />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/na"
            android:drawableLeft="@drawable/ic_temperature"
            android:gravity="center_vertical"
            style="@style/item"/>


        <TextView
            android:id="@+id/humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/na"
            android:drawableLeft="@drawable/ic_humidity"
            android:gravity="center_vertical"
            style="@style/item"/>

        <TextView
            android:id="@+id/pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/item"
            android:drawableLeft="@drawable/ic_pressure_meter"
            android:gravity="center_vertical"
            android:text="@string/na" />

        <TextView
            android:id="@+id/created_on"
            style="@style/item"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_baseline_refresh_24"
            android:text="@string/na"
            android:textSize="13sp" />

</LinearLayout>